{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "leaderboard": {
      ".read": "true",
      ".write": "auth != null",
      "$entry": {
        ".validate": "newData.hasChildren(['uid', 'score', 'email']) && newData.child('uid').isString() && newData.child('score').isNumber() && newData.child('email').isString()"
      }
    }
  }
}
